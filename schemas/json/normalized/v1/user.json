{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/cablelabs/lpwanserver/blob/master/schemas/json/normalized/v1/user.json",
  "title": "User",
  "description": "An LPWAN Server user",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique ID"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User's email address"
    },
    "emailVerified": {
      "type": "boolean",
      "description": "Has the email address been verified"
    },
    "passwordHash": {
      "type": "string",
      "description": "Hash of the user's password"
    },
    "roles": {
      "type": "array",
      "description": "User's roles",
      "items": {
        "type": "string",
        "enum": ["ADMIN"]
      }
    }
}